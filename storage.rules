rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /covers/{imageId} {
      allow read: if true;
      allow write: if request.auth != null
        && request.resource.size <= 2 * 1024 * 1024 // 2MB
        && request.resource.contentType.matches('image/.*');
    }
  }
}
